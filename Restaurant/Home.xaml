<Window x:Class="Restaurant.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Restaurant"
        mc:Ignorable="d"
        Title="Home" Height="450" Width="800">
    <Grid Background="#FF232323">
        <TextBlock Text="{Binding Path=Budget}" Margin="135,10,401,374" Foreground="White"></TextBlock>
        <Button x:Name="buttonMainWindow" Content="Сотрудники" Margin="10,10,662,374" Click="button_Click" />
        <Button x:Name="buttonMenu" Content="Меню" Margin="10,50,662,334" Click="button_Click" />
        <Button x:Name="buttonProducts" Content="Продукты" Margin="10,90,662,294" Click="button_Click" />
        <Button x:Name="buttonOrder" Content="Заказ" Margin="10,130,662,254" Click="button_Click" />
    </Grid>
</Window>
